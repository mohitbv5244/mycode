
void loopfusion1(int n, int *a, int *b, int *c, int *d){

   int i = 0;
  

      while(i < n){
           a[i] = b[i] + 1;
            i++;
      }
  
      
      while(i < n){
           c[i] = a[i] * 2;
            i++;
      }
      
      while(i < n){
           d[i] = 1 + c[i+1];
            i++;
      }
